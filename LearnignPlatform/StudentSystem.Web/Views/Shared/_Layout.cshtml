</head>

<body>
    <div>
        @if (User.Identity.Name == "admin@mail.com")
        {
            <nav class="navbar navbar-inverse navbar-fixed-top visible-xs-block">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse" style="font-">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="@Url.Action("Index", "Home" )" data-menu="projects">Начало</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "StudentClass" )" data-menu="projects">Класове</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Subjects" )" data-menu="projects">Предмети</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Teachers" )" data-menu="projects">Учители</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Students" )" data-menu="projects">Ученици</a>
                            </li>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))

                            {
                                @Html.AntiForgeryToken();
                                if (Request.IsAuthenticated)

                                {
                                    <li>
                                        <a href="javascript:document.getElementById('logoutForm').submit()">Изход</a>
                                    </li>
                                }
                            }

                        </ul>


                    </div><!--/.nav-collapse -->
                </div><!--/.container-fluid -->

            </nav>
        }
        else
        {
            <nav class="navbar navbar-inverse navbar-fixed-top visible-xs-block">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse" style="font-">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="@Url.Action("Index", "Home" )" data-menu="projects">Начало</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Evaluate" )" data-menu="projects">Курсове които водя</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Subjects" )" data-menu="projects">Курсове</a>
                            </li>

                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))

                            {
                                @Html.AntiForgeryToken();
                                if (Request.IsAuthenticated)

                                {
                                    <li>
                                        <a href="javascript:document.getElementById('logoutForm').submit()">Изход</a>
                                    </li>
                                }
                            }

                        </ul>


                    </div><!--/.nav-collapse -->
                </div><!--/.container-fluid -->

            </nav>
        }

    </div>
    <div class="cd-panel from-right hidden-xs">

    </div>
