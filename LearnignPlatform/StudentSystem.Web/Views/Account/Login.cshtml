@model StudentSystem.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Вход";
}
<title>Добре дошли!</title>
<link rel="stylesheet" href="~/Misc/Page/css/magister.css">


@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <body>

        <div class="container">
            <div class="row vertical-offset-100">
                @*Panel placement vertically*@
                <div class="col-md-4 col-md-offset-4">
                    @*Panel placement horizontally*@
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="row-fluid user-row text-center">
                                Вход
                            </div>
                        </div>
                        <div class="panel-body">
                            <form accept-charset="UTF-8" role="form" class="form-signin">
                                <fieldset>
                                    <label class="panel-login">
                                        <div class="login_result"></div>
                                    </label>
                                    <div>
                                        <div>
                                            @Html.ValidationSummary("", new { @class = "text-danger" })
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                                        </div>
                                    </div>

                                    <div>
                                        <div>
                                            <label for="Password" class="text-centered"></label> @*Same as LabelFor*@
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Парола" })
                                        </div>
                                    </div>
                                    <br>
                                    <br>
                                   <input class="myButton" type="submit" id="login" value="Вход">

                                    <br />
                                    <a href="@Url.Action("Register","Account")"><input class="btn btn-lg btn-block btn-primary " value="Регистрирайте се"/></a>
                                    <br />
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
}
<script src="http://mymaplist.com/js/vendor/TweenLite.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
























