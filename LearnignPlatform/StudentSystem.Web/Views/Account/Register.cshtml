@model StudentSystem.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}
    <link rel="stylesheet" href="~/Misc/Page/css/magister.css">
<title>Регистрация</title>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <body>

        <div class="container">
            <div class="row vertical-offset-100">
                @*Panel placement vertically*@
                <div class="col-md-4 col-md-offset-4">
                    @*Panel placement horizontally*@
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row-fluid user-row text-center">
                            Създаване на профил
                        </div>
                    </div>
                    <div class="panel-body">
                        <form accept-charset="UTF-8" role="form" class="form-signin">
                            <fieldset>
                                <label class="panel-login">
                                    <div class="login_result"></div>
                                </label>
                                <div>
                                    <div>
                                        @Html.ValidationSummary("", new { @class = "text-danger" })
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                                    </div>
                                </div>

                                <div>
                                    <div>
                                        <label for="Password" class="text-centered"></label> @*Same as LabelFor*@
                                        @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label text-centered" })*@
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Парола" })
                                    </div>
                                </div>

                                <div>
                                    <div>
                                        <br />
                                        @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label text-centered" })*@
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Потвърди парола." })
                                    </div>
                                </div>
                                <br>
                                <input class="btn btn-lg btn-success btn-block" type="submit" id="register" value="Регистрация">
                                <br />
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
}
<script src="http://mymaplist.com/js/vendor/TweenLite.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
